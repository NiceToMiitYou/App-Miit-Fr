<div ng-controller="notesController" class="content notes-content" ng-class="{active : activetool === 'note'}">  

    <div class="header navbar navbar-inverse ">

        <div class="navbar-inner">
            <div class="header-quick-nav">
                <div class="pull-left">
                    <h3><i class="fa fa-pencil"></i> Notes</h3>
                </div>

                <div class="pull-right">
                    <ul class="nav quick-section">
                        <li class="quicklinks">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <div class="iconset top-menu-toggle-dark"></div>
                            </a>
                            <ul class="dropdown-menu pull-right" role="menu">
                                <li role="presentation" class="dropdown-header">Actions</li>

                                <li>
                                    <a href="#" ng-click="addNote();">Cr√©er une note</a>
                                </li>

                                <li>
                                    <a href="#" ng-click="send();">Me l'envoyer par mail</a>
                                </li>

                                <li class="divider"></li>

                                <li role="presentation" class="dropdown-header">Liste des notes</li>

                                <li ng-repeat="note in notes">
                                    <a href="#" ng-click="changeNote(note);">
                                        {{ note.title }}
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </div>

<textarea ng-model="current.content"
ng-change="hasChange = true"
ng-blur="save()" 
id="text-editor"
placeholder="Tapez vos notes ici"
class="form-control"
rows="10"></textarea>


<div class="note-title">
    <span>Titre : </span><input ng-model="current.title"
    ng-change="hasChange = true"
    maxlength="50"
    ng-blur="save()"
    type="text">
</div>

</div>