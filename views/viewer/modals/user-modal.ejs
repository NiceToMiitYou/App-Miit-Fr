<div ng-controller="userModalController" class="modal show" id="userinfo-modal" ng-show="firstInit">
    <form role="form">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">

                    <i class="fa fa-user fa-6x"></i>

                    <h4 id="myUserModalLabel" class="semi-bold">
                        Bienvenue pour votre premiere experience ITEvents
                    </h4>
                    <p class="no-margin">Choisissez le type de compte que vous souhaitez utiliser sur la plateforme</p>
                </div>

                <div class="modal-body" style="padding:10px;">

                    <div class="panel-group" id="accordion" data-toggle="collapse" style="margin-bottom:0;">

                        <div class="panel panel-default" ng-class="{selected : accountType === 0}">
                            <div class="panel-heading collapsed">
                                <h4 class="panel-title">
                                    <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" ng-click="resetToClassic()">
                                        Classique
                                    </a>
                                </h4>
                            </div>

                            <div id="collapseOne" class="panel-collapse collapse" style="height: 0px;">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h4 class="semi-bold">Informations :</h4>
                                            <div class="col-md-6">
                                                <label>Nom :</label>
                                                <input type="text" placeholder="Smith" ng-model="user.lastname"/>
                                            </div>
                                            <div class="col-md-6">
                                                <label>Prénom :</label>
                                                <input type="text" placeholder="John" ng-model="user.firstname"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-md-12 m-t-5">
                                                <label>Société :</label>
                                                <input type="text" placeholder="Société" ng-model="user.society" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row m-t-10">
                                        <div class="col-md-12">
                                            <div class="checkbox check-primary" ng-class="{'col-md-1':useUsername}">
                                                <input ng-model="useUsername"
                                                       ng-change="useUsernameChanged()"
                                                       id="checkbox-pseudo" type="checkbox" value="1">

                                                <label for="checkbox-pseudo">
                                                    <span ng-show="!useUsername">
                                                        Utiliser un pseudonyme lors de mes publications
                                                    </span>
                                                </label>
                                            </div>

                                            <div class="col-md-11" ng-show="useUsername">
                                                <input type="text" placeholder="Pseudonyme" ng-model="user.username"/> 
                                            </div>
                                        </div>
                                        
                                    </div>
                                    <div class="row m-t-10">
                                        <div class="col-md-12">
                                            <h4 class="semi-bold">Choisissez un Avatar :</h4>
                                            <div class="avatar-choice">
                                                <a class="avatar" ng-class="user.avatar.c + ' avatar-' + user.avatar.a" ng-click="changeAvatar=true"></a>
                                                <ul class="avatar-choice-list" ng-show="changeAvatar" ng-click="changeAvatar=false">
                                                    <li><a ng-click="user.avatar.a='m1'" class="avatar avatar-m1"></a></li>
                                                    <li><a ng-click="user.avatar.a='m2'" class="avatar avatar-m2"></a></li>
                                                    <li><a ng-click="user.avatar.a='m3'" class="avatar avatar-m3"></a></li>
                                                    <li><a ng-click="user.avatar.a='m4'" class="avatar avatar-m4"></a></li>
                                                    <li><a ng-click="user.avatar.a='m5'" class="avatar avatar-m5"></a></li>
                                                    <li><a ng-click="user.avatar.a='m6'" class="avatar avatar-m6"></a></li>
                                                    <li><a ng-click="user.avatar.a='m7'" class="avatar avatar-m7"></a></li>
                                                    <li><a ng-click="user.avatar.a='m8'" class="avatar avatar-m8"></a></li>
                                                    <li><a ng-click="user.avatar.a='m9'" class="avatar avatar-m9"></a></li>
                                                    <li><a ng-click="user.avatar.a='f1'" class="avatar avatar-f1"></a></li>
                                                    <li><a ng-click="user.avatar.a='f2'" class="avatar avatar-f2"></a></li>
                                                    <li><a ng-click="user.avatar.a='f3'" class="avatar avatar-f3"></a></li>
                                                    <li><a ng-click="user.avatar.a='f4'" class="avatar avatar-f4"></a></li>
                                                    <li><a ng-click="user.avatar.a='f5'" class="avatar avatar-f5"></a></li>
                                                    <li><a ng-click="user.avatar.a='f6'" class="avatar avatar-f6"></a></li>
                                                    <li><a ng-click="user.avatar.a='f7'" class="avatar avatar-f7"></a></li>
                                                    <li><a ng-click="user.avatar.a='f8'" class="avatar avatar-f8"></a></li>
                                                    <li><a ng-click="user.avatar.a='f9'" class="avatar avatar-f9"></a></li>
                                                </ul>
                                            </div>
                                            <ul class="color-choice">
                                                <li ng-class="{selected:user.avatar.c=='red'}" ng-click="user.avatar.c='red'" class="tiles red"></li>
                                                <li ng-class="{selected:user.avatar.c=='purple'}" ng-click="user.avatar.c='purple'" class="tiles purple"></li>
                                                <li ng-class="{selected:user.avatar.c=='blue'}" ng-click="user.avatar.c='blue'" class="tiles blue"></li>
                                                <li ng-class="{selected:user.avatar.c=='green'}" ng-click="user.avatar.c='green'" class="tiles green"></li>
                                                <li ng-class="{selected:user.avatar.c=='black'}" ng-click="user.avatar.c='black'" class="tiles black"></li>
                                                <li ng-class="{selected:user.avatar.c=='dark-blue'}" ng-click="user.avatar.c='dark-blue'" class="tiles dark-blue"></li>
                                                <li ng-class="{selected:user.avatar.c=='light-blue'}" ng-click="user.avatar.c='light-blue'" class="tiles light-blue"></li>
                                                <li ng-class="{selected:user.avatar.c=='light-red'}" ng-click="user.avatar.c='light-red'" class="tiles light-red"></li>
                                                <li ng-class="{selected:user.avatar.c=='grey'}" ng-click="user.avatar.c='grey'" class="tiles grey"></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default" ng-class="{selected : accountType === 1}">
                            <div class="panel-heading collapsed">
                                <h4 class="panel-title">
                                    <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" ng-click="generateAnonym()">
                                        Anonyme
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseThree" class="panel-collapse collapse" style="height: 0px;">
                                <div class="panel-body">
                                    <div class="row m-t-10">
                                        <div class="col-md-3"><label style="line-height: 34px;">Pseudonyme : </label></div>
                                        <div class="col-md-9"><input type="text" ng-model="user.username" /></div>
                                    </div>
                                    <div class="col-md-12 text-center m-t-20">
                                        <div class="checkbox check-primary">
                                            <input id="checkbox-anonyme" type="checkbox" ng-model="agreeAnonyme" value="1">
                                            <label for="checkbox-anonyme">
                                                En utilisant la navigation anonyme vous vous engagez à respecter les règles de politesse et de respect élémentaires
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" ng-click="saveUser();" class="btn btn-primary">Sauvegarder</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
        <div class="modal-backdrop fade in"></div>
    </form>
</div>