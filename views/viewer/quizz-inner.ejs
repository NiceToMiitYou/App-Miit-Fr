<div ng-controller="QuizzInnerController" class="content quizz-inner-content" ng-class="{active : activetool === 'QUIZZ-INNER'}"> 

    <div class="header navbar navbar-inverse ">

        <div class="navbar-inner">
          <a class="btn btn-primary previous-quizz" ng-click="track('QUIZZ')" href="#quizz"><i class="fa fa-chevron-left"></i></a>
            <div class="header-quick-nav">
                <div class="pull-left">
                    <h3><i class="fa fa-pencil"></i> {{ current.name }}</h3>
                </div>
            </div>
        </div>
    </div>

    <div ng-show="current.answered" class="alert alert-error m-l-20 m-r-20 m-t-20 m-b-10">
        <button class="close" data-dismiss="alert"></button>
          <i class="fa fa-exclamation-triangle"></i>
          &nbsp;&nbsp;<%= __('viewer.quizz-inner.already_answered') %>
    </div>

    <p style="padding: 11px 17px 0 17px;">
        
    </p>

    <blockquote class="m-l-20 m-r-20">
        <p>{{ current.description }}</p>
    </blockquote>

    <div class="">

        <div ng-repeat="question in current.questions" class="col-md-12">
            <h3>{{ question.question }}</h3>

            <div ng-repeat="answer in question.answers" class="row-fluid">

                <div ng-show="question.type === 1"
                     class="radio check-default">

                    <input id="radio-{{ question.id }}-{{ answer.id }}"
                           name="radio-{{ question.id }}"
                           type="radio"
                           ng-checked="answer.selected"
                           ng-disabled="current.answered"
                           ng-click="checkRight(question, answer)">

                    <label for="radio-{{ question.id }}-{{ answer.id }}">
                        {{ answer.answer }}
                    </label>
                </div>

                <div ng-show="question.type === 2"
                     class="checkbox check-default">

                    <input id="checkbox-{{ question.id }}-{{ answer.id }}"
                           name="checkbox-{{ question.id }}"
                           type="checkbox"
                           ng-checked="answer.selected"
                           ng-disabled="current.answered"
                           ng-true-value="true" ng-false-value="false"
                           ng-model="answer.selected">

                    <label for="checkbox-{{ question.id }}-{{ answer.id }}">
                        {{ answer.answer }}
                    </label>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <button ng-click="saveQuizz();"
                    ng-disabled="current.answered || !isAnswered"
                    type="button"
                    class="btn btn-primary">
                <%= __('viewer.quizz-inner.validate') %>
            </button>
        </div>
    </div>
</div>